<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F5FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_box" />

        <!-- Titre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenue"
            android:textSize="24sp"
            android:textColor="#1A1A1A"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connectez-vous ou créez un compte pour continuer"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Switch Client / Livreur -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:padding="5dp"
            android:elevation="4dp"
            android:gravity="center"
            android:layout_marginBottom="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnClient"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Client"
                android:textColor="#000"
                android:background="@drawable/unselected_tab" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnLivreur"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Livreur"
                android:textColor="#000"
                android:background="@drawable/unselected_tab" />
        </LinearLayout>

        <!-- Boutons Inscription / Connexion -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btnGoInscription"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Inscription" />

            <Button
                android:id="@+id/btnGoConnexion"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Connexion" />
        </LinearLayout>

        <!-- FORMULAIRE INSCRIPTION -->
        <LinearLayout
            android:id="@+id/layoutInscription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Inscription"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/inputNom"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_style"
                android:hint="Nom complet"
                android:padding="10dp" />

            <EditText
                android:id="@+id/inputEmail"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_style"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/inputPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_style"
                android:hint="Mot de passe"
                android:inputType="textPassword"
                android:padding="10dp"
                android:layout_marginTop="10dp" />

            <EditText
                android:id="@+id/inputConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_style"
                android:hint="Confirmer le mot de passe"
                android:inputType="textPassword"
                android:padding="10dp"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/btnInscrire"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="S'inscrire"
                android:textColor="#fff"
                android:background="#1B1195"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <!-- FORMULAIRE CONNEXION -->
        <LinearLayout
            android:id="@+id/layoutConnexion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF"
            android:elevation="4dp"
            android:padding="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connexion"
                android:textStyle="bold"
                android:textSize="18sp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/inputEmailLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_style"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp" />

            <EditText
                android:id="@+id/inputPasswordLogin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/input_style"
                android:hint="Mot de passe"
                android:inputType="textPassword"
                android:padding="10dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/forgotPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mot de passe oublié ?"
                android:textColor="#1B1195"
                android:textStyle="bold"
                android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/btnConnecter"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Se connecter"
                android:textColor="#fff"
                android:background="#1B1195"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
